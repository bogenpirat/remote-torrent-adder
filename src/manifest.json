{
    "version": "2.0.3",
    "name": "Remote Torrent Adder",
    "short_name": "RTA",
    "icons": {
        "16": "assets/icons/BitTorrent16.png",
        "48": "assets/icons/BitTorrent48.png",
        "128": "assets/icons/BitTorrent128.png"
    },
    "manifest_version": 3,
    "description": "Add torrents using several programs' WebUIs",
    "permissions": [
        "contextMenus",
        "notifications",
        "tabs",
        "storage",
        "offscreen",
        "webRequest",
        "webRequestAuthProvider",
        "declarativeNetRequest"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "service_worker.js"
    },
    "options_page": "options/options.html",
    "action": {
        "default_icon": {
            "16": "assets/icons/BitTorrent16.png",
            "48": "assets/icons/BitTorrent48.png",
            "128": "assets/icons/BitTorrent128.png"
        },
        "default_title": "Remote Torrent Adder"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content-script/rta.js"
            ],
            "run_at": "document_start",
            "all_frames": true
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "assets/icons/White_X_in_red_background.svg",
                "assets/icons/BitTorrent16.png",
                "assets/icons/BitTorrent48.png",
                "assets/icons/BitTorrent128.png"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}
