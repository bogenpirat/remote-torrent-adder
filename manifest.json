{
	"name": "Remote Torrent Adder",
	"short_name": "RTA",
	"icons": {"16":"icons/BitTorrent16.png", "48":"icons/BitTorrent48.png", "128":"icons/BitTorrent128.png"},
	"version": "1.3.8",
	"manifest_version": 3,
	"description": "Add torrents using several programs' WebUIs",
	"permissions": [
		"contextMenus",
		"notifications",
		"tabs",
		"webRequest",
		"storage",
		"scripting"
	],
	"host_permissions": [
		"*://*/*"
	],
	"background": {
		"service_worker": "miscapis/service-worker.js"
	},
	"options_page": "options.html",
	"action": {
		"default_icon": {"16":"icons/BitTorrent16-gray.png", "48":"icons/BitTorrent48-gray.png", "128":"icons/BitTorrent128-gray.png"},
		"default_title": "Remote Torrent Adder"
	},
	"content_scripts": [
		{
		"matches": ["<all_urls>"],
		"js": [
			"miscapis/modal.js",
			"miscapis/content_rta.js"
		],
		"css": [
			"modal.css"
		],
		"run_at": "document_end",
		"all_frames": true
		}
	],
	"web_accessible_resources": [
		{
			"resources": [
				"icons/White_X_in_red_background.svg",
				"icons/BitTorrent16.png",
				"icons/BitTorrent48.png",
				"icons/BitTorrent128.png",
				"icons/BitTorrent128-red.png",
				"miscapis/jquery-2.0.3.min.map",
				"fancybox/*"
			],
			"matches": [
				"<all_urls>"
			]
		}
	]
}
